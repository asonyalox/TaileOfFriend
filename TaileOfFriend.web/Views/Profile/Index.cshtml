@using TaileOfFriend.DAL.Enteties
@model TaileOfFriend.web.ViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}



<div class="container">
    <div id="main">


        <div class="row" id="real-estates-detail">
            <div class="col-lg-4 col-md-4 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <header class="panel-title">
                            <div class="text-center">
                                <strong>Користувач сайта</strong>
                            </div>
                        </header>
                    </div>
                    <div class="panel-body">
                        <div class="text-center" id="author">
                            @if (Model.Image == null)
                            {
                                <img width="200px" height="200px" src="~/images/defaultPhoto.png" />
                            }
                            <h3>@Html.DisplayFor(model => model.UserName)</h3>
                            <form asp-controller="ProfileController" asp-action="ChangeImage">
                            <a  href="#addphoto" data-toggle="tab">Редагувати</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
                <div class="panel">
                    <div class="panel-body">
                        <ul id="myTab" class="nav nav-pills">
                            <li class="active"><a href="#detail" data-toggle="tab">Про користувача</a></li>
                            <li class=""><a asp-controller="Profile" asp-action="Edit"  data-toggle="tab">Редагувати профіль</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                            <li class=""><a asp-controller="Event" asp-action="AddEvent" data-toggle="tab">Створити подію</a></li>
                            
                            }
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <hr>
                            <div class="tab-pane fade active in" id="detail">
                                <h4>Інформація профіля</h4>
                                <table class="table table-th-block">
                                    <tbody>
                                        <tr><td class="active">Локація:</td><td>@Html.DisplayFor(model => model.Location.Loc)</td></tr>
                                        <tr><td class="active">Стать:</td><td>@Html.DisplayFor(model => model.Gender)</td></tr>
                                        <tr><td class="active">Вік:</td><td>@Html.DisplayFor(model => model.Age)</td></tr>
                                       
                                    </tbody>
                                </table>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div><!-- /.main -->
</div><!-- /.container --