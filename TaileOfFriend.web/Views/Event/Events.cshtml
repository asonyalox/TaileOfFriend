@using  TaileOfFriend.BLL.DTO
@model IEnumerable<EventDTO>
@{
    ViewData["Title"] = "ListEvent";
}

<div class="col-sm-12 well text-center">
    <div class="col-md-12">
        @if (Model.Any())
        {
            <p><strong>All Events</strong></p>
            @foreach (var ev in Model)
            {
                <div class="thumbnail">
                    <p><strong>@ev.EventName</strong></p>
                    <img src="@ev.ImageUrl" width="100" height="100">
                    <p><strong>@ev.Location</strong></p>
                    <p>@ev.EventDates</p>

                    <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="btn btn-primary">Info</a>
                </div>
            }
        }
    </div>
</div>